############################################################
# Backend .env example (development-friendly defaults)
############################################################

# App
PORT=4000
NODE_ENV=development

# Auth
JWT_SECRET=replace_me_in_production
JWT_EXPIRATION=1h

# Database (local Postgres)
DB_NAME=portfolio
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Production DB (unused locally)
DB_NAME_PROD=
DB_USER_PROD=
DB_PASSWORD_PROD=
DB_HOST_PROD=
DB_PORT_PROD=5432

# Frontend URLs
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PROD=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# AWS (optional; leave blank for local dev)
AWS_S3_ENDPOINT=
AWS_S3_PORT=
AWS_S3_REGION=
AWS_S3_ACCESS_KEY=
AWS_S3_SECRET_KEY=
AWS_S3_BUCKET_NAME=

# Email / SES (optional)
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=
AWS_SES_REGION=
EMAIL_FROM=

# Kintone (optional)
KINTONE_API_BASE_URL=
KINTONE_API_TOKEN=
KINTONE_APP_ID=
KINTONE_STAFF_TOKEN=
KINTONE_RECRUITER_TOKEN=
KINTONE_STUDENT_CREDITS_TOKEN=
KINTONE_IELTS_TOKEN=
KINTONE_IT_CONTEST_TOKEN=
KINTONE_JLPT_TOKEN=
KINTONE_BENRON_TOKEN=
KINTONE_JDU_NINTEI_TOKEN=
KINTONE_CREDIT_DETAILS_TOKEN=

# Deployment (optional)
PM2_SERVICE_NAME=portfolio-server
EC2_KEY=
EC2_USER=
EC2_HOST=
EC2_PATH=
